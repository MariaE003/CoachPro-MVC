<header class="bg-white shadow sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
    <a class="flex items-center gap-3 text-2xl font-extrabold text-primary">
      <i class="fas fa-dumbbell text-accent"></i> FitCoach
    </a>

    <nav class="hidden md:flex gap-8 font-medium">

      {% if isLogged and role == 'client' %}
        <a href="/CoachPro-MVC/public/coachs" class="hover:text-accent">Coachs</a>
        <a href="/CoachPro-MVC/public/mes-reservations" class="hover:text-accent">Mes Réservations</a>
      {% endif %}

      {% if isLogged and role == 'coach' %}
        <a href="/CoachPro-MVC/public/coach/reservations" class="hover:text-accent">Mes Réservations (coach)</a>
        <a href="/CoachPro-MVC/public/coach/disponibilites" class="hover:text-accent">Disponibilités</a>
        <a href="/CoachPro-MVC/public/coach/dashboard" class="hover:text-accent">Dashboard</a>
      {% endif %}

    </nav>

    <div class="hidden md:flex gap-3">
      {% if isLogged and role == 'client' %}
        <a href="/CoachPro-MVC/public/sportif-profil" 
           class="nav-btn px-3 py-1 rounded-lg hover:bg-blue-100 transition cursor-pointer">
           Profil
        </a>
      {% endif %}

      {% if isLogged and role == 'coach' %}
        <a href="/CoachPro-MVC/public/profil-coach" 
           class="nav-btn px-3 py-1 rounded-lg hover:bg-blue-100 transition cursor-pointer">
           Profil
        </a>
      {% endif %}

      {% if isLogged %}
        <form action="" method="POST">
          <button type="submit" name="logout" 
                  class="nav-btn px-3 py-1 rounded-lg hover:bg-blue-100 transition cursor-pointer">
            Déconnecter
          </button>
        </form>
      {% endif %}
    </div>
  </div>
</header>
